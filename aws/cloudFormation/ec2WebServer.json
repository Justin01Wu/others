{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "EnvType": {
      "Description": "Environment type.",
      "Default": "test",
      "Type": "String",
      "AllowedValues": [
        "prod",
        "test"
      ]
    }
  },
  "Resources": {
    "EC2TomcatServer": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-00dc79254d0461090",
        "InstanceType": "t2.micro",
        "KeyName": "MyUser2KP",
        "SecurityGroups": [
          "WebDMZ"
        ],
        "IamInstanceProfile": "WebServerRole",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash -ex",
                "\n",
                "yum update -y",
                "\n",
                "yum install java-1.8.0-openjdk-devel -y",
                "\n",
                "aws s3 cp s3://justa-pipeline/scwcd/scwcd/target/scwcd.war /usr/share/tomcat/webapps/",
                "\n",
                "amazon-linux-extras install tomcat8.5 -y",
                "\n",
                "service tomcat.service start",
                "\n",
                "systemctl enable tomcat.service"
              ]
            ]
          }
        }
      }
    }
  },
  "Outputs": {
    "AppEndpoint": {
      "Description": "URL to access the application",
      "Value": {
        "Fn::Join": [
          "",
          [
            "http://",
            {
              "Fn::GetAtt": [
                "EC2TomcatServer",
                "PublicDnsName"
              ]
            },
            ":8080/scwcd"
          ]
        ]
      }
    }
  }
}